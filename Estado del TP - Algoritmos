void TrabajoParcial() {
	hidecursor();
	UPClogo(4, 5);
	Juego* ObjJuego = new Juego();
	ObjJuego->Introduccion();
	_sleep(3000);
	Menu(ObjJuego);
	delete ObjJuego;
}

int main() {
	srand(time(0));
	TrabajoParcial();
	return 0;
}
